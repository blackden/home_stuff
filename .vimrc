syntax enable
set nocompatible

set encoding=utf-8

filetype plugin indent on

" перенос по строкам
set linebreak
set dy=lastline

" tab в 2 символа
set ts=2
set shiftwidth=2
set smarttab
set expandtab
set smartindent

" переносить длинные строки
set wrap

" игнорировать регистр при поиске
set ic

" нумерация строк
set nu
